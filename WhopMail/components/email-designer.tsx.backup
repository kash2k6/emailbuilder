                            key={element.id} 
                            style={{ 
                              borderTop: '1px solid #e0e0e0', 
                              margin: '20px 0',
                              ...styles
                            }}
                            className={`${isSelected ? 'ring-2 ring-blue-500 ring-opacity-50 p-2' : ''} cursor-pointer hover:ring-1 hover:ring-gray-300 transition-all`}
