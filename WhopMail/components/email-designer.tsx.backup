                          <div 
                            key={element.id} 
                            style={{ 
                              height: element.content || '20px',
                              ...styles
                            }}
                            className={`${isSelected ? 'ring-2 ring-blue-500 ring-opacity-50' : ''} cursor-pointer hover:ring-1 hover:ring-gray-300 transition-all`}
                            onClick={() => setSelectedElement(element.id)}
