                        </div>
                        {template.description && (
                          <p className="text-sm text-muted-foreground mb-2">{template.description}</p>
                        )}
                        <p className="text-xs text-muted-foreground">
                          Subject: {template.subject}
                        </p>
                        {template.usage_count > 0 && (
                          <p className="text-xs text-muted-foreground">
